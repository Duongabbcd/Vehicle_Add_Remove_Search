<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/hp_img"
            android:background="@drawable/h1"
            android:layout_width="160dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/hp_pub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OMG ! WOW"
                android:textSize="16dp"
                android:padding="10dp"
                android:textColor="@color/black"
                android:layout_margin="5dp"/>
            <TextView
                android:id="@+id/hp_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OMG ! WOW"
                android:textSize="16dp"
                android:padding="10dp"
                android:textColor="@color/black"
                android:layout_margin="5dp"/>
            <TextView
                android:id="@+id/hp_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OMG ! WOW"
                android:textSize="16dp"
                android:padding="10dp"
                android:textColor="@color/black"
                android:layout_margin="5dp"/>

            <TextView
                android:id="@+id/hp_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OMG ! WOW"
                android:textSize="16dp"
                android:padding="10dp"
                android:textColor="@color/black"
                android:layout_margin="5dp"/>

        </LinearLayout>

<!--        <Button-->
<!--            android:id="@+id/hp_btn"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="match_parent"-->
<!--            android:backgroundTint="#146058"-->
<!--            android:text="REMOVE"-->
<!--            android:layout_margin="10dp"-->
<!--            android:padding="5dp"/>-->

    </LinearLayout>

</androidx.cardview.widget.CardView>